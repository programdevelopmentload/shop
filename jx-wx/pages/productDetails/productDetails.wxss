.modal-dialog1 .modal-content .modal-padding{padding-left: 30rpx; font-size: 30rpx; margin-bottom: 60rpx;}
.modal-content .modal-padding .modal_right{padding-left: 55rpx; color: #333333;} 
.modal-content .modal-padding .modal_left{color: #969593;}

.modal-content{padding-top: 20rpx;}
