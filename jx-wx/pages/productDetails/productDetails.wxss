/* mask */
 .modal-mask{width:100%;height: 100%;position: fixed;top: 0;left: 0;background: #000; opacity: 0.5;overflow: hidden;}
.modal-dialog {position: fixed; bottom: 0;left: 0;width: 100%; height: 858rpx; 
background: #fff;border-top-left-radius: 10rpx; border-bottom-left-radius: 10rpx; }
.modal-dialog .modal-title{height: 100rpx; background: #fff; line-height: 100rpx; font-size: 34rpx;color: #333333;text-align: center; border-bottom: 1px solid #DADADA;}
.modal-content .model-lists{height: 60rpx; margin:20rpx; background: #fff; border-radius: 10rpx;  }
.model-lists .list{font-size: 30rpx; color: #333333; float: left;}
.model-lists .list_ruler{font-size: 26rpx; margin-top: 20rpx; float: right;}
.model-lists .list_ruler text{padding-left: 40rpx; }
.model-lists .list_ruler text:first-child{padding-left: 0;}
.modal-footer{position: fixed;bottom: 0;left: 0; width: 100%; height: 98rpx; 
background: #eb5033; line-height: 98rpx; text-align: center; color: #fff;font-size: 36rpx;}

