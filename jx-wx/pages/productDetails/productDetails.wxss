.modal-content1{padding:20rpx 40rpx 200rpx; }
.modal-content1 image{width: 36rpx; height: 36rpx;}
.modal-content1 .server_right{width: 600rpx;}
.server_right text{font-size: 30rpx; color: #333333; }
.server_right view{ font-size: 24rpx; color: #999999;  margin-top: 30rpx;margin-bottom: 50rpx;}
.server_right{ margin-top: -10rpx;}


/* 商品详情规格 */
.modal_padding{padding-bottom: 100rpx;}
.modal-content2{margin:30rpx 0 40rpx 30rpx;}
.modal-content2 image{width: 200rpx; height: 200rpx;}
.modal-content2 .product_right{margin-left: 20rpx;width: 485rpx}
.product_right .title{font-size: 32rpx;color: #000000; }
.product_right .product_ruler{font-size: 28rpx;padding-top: 20rpx;}
.product_right .product_ruler .del text{color: #666666;font-size: 22rpx; text-decoration:line-through;}
.product_right .product_ruler text {color: #000;font-size: 28rpx;}
.product_right .product_ruler .ruler_sx{ display: block;font-size: 28rpx;color: #666666;}
.choose_box{margin-top: 60rpx;}
.choose_box .ctil{font-size: 28rpx;color: #000000; display: block;}
.choose_box .choose{padding: 0 10rpx; height: 70rpx;color: #666666;font-size: 26rpx; background: #F4F3F2;border-radius: 10rpx; text-align: center;line-height: 70rpx; display: inline-block;  margin-right: 30rpx; margin-top: 20rpx;}
 .choose_box .active{background: #eb5033 ; color:#fff ;}
.choose_box .choose text{font-size: 26rpx;}
.choose_box .stepper{ width: 226rpx;   height: 60rpx;   border: 1px solid #ccc;  border-radius: 3px;  margin-top: 20rpx; }  
/*加号和减号*/  
.choose_box .stepper text { width: 70rpx; line-height: 60rpx; text-align: center; float: left;  } 
/*数值*/  
.choose_box .stepper input { width: 80rpx; height: 60rpx;  float: left; margin: 0 auto;  text-align: center;  font-size: 28rpx;  border-left: 1px solid #ccc;  border-right: 1px solid #ccc; color: #333333; background: #fff; }   
.stepper .normal{  color: black; } 
/*禁用样式*/  
.stepper .disabled{  color: #ccc;}   

      


   
      
   
    
   
   
     
   
 
   
    
    
   

  
   
    
    
   
   
