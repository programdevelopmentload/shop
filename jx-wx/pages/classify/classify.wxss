.nav_left .nav_left_items{  
  height: 100rpx;  
  line-height: 100rpx;  
  border-bottom: 1px solid #fff;  
  font-size: 26rpx; 
  color:#666666;
}  
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.active{  
  background: #fff;  
  color: #eb5033; 
  font-size: 32rpx;

}  
.nav_left .nav_left_items.active text{  
  display: inline-block;
  width: 100%;
  border-left: 10rpx solid #eb5033;
  line-height: 50rpx;
}
/*右侧栏主盒子*/  
.nav_right{  
  background: #f2f2f2;
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;   
  width: 75%;    
  box-sizing: border-box;  
  padding-top: 0rpx;
}   
.nav_right .nav_right_items{  
  float: left;  
  width: 100%;
  text-align: left;  
}  
.nav_right .nav_right_items image{  
  width: 60px;  
  height: 60px;  
  margin-top: 15px;  
}  
.nav_right .nav_right_items .second{  
  display: block;  
 background: #f2f2f2;
  font-size: 28rpx;  
  color:#333333;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
  padding-left: 30rpx;
  padding: 30rpx 0 30rpx 30rpx;
} 
.nav_right .nav_right_items text{  
  display: block;  
  font-size: 28rpx;  
  color:#333333;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}
